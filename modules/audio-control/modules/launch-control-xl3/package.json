{
  "name": "@oletizi/launch-control-xl3",
  "version": "1.0.1",
  "description": "TypeScript library for Novation Launch Control XL 3 device control and MIDI mapping",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "lcxl3": "./dist/cli/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc -b && vite build",
    "clean": "rm -rf dist *.tsbuildinfo",
    "dev": "tsc -b --watch",
    "test": "vitest",
    "test:unit": "vitest run test/core test/utils",
    "test:integration": "vitest run test/integration",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "cli": "tsx src/cli/cli.ts",
    "example:basic": "tsx examples/basic-connection.ts",
    "example:leds": "tsx examples/led-animations.ts",
    "example:modes": "tsx examples/custom-modes.ts",
    "example:mapping": "tsx examples/control-mapping.ts",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "novation",
    "launch-control",
    "xl3",
    "midi",
    "controller",
    "sysex",
    "audio",
    "daw",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@midival/core": "^0.2.0",
    "@types/js-yaml": "^4.0.9",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "js-yaml": "^4.1.0",
    "ora": "^7.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "midi": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "midi": {
      "optional": true
    }
  }
}
