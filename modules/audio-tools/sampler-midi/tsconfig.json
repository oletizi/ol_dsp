{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "paths": {
      "@/*": [
        "./src/*",
      ],
      "tests/*": ["./test/*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "incremental": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "nodenext",
    "moduleResolution": "nodenext"
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "dist"
  ]
}
