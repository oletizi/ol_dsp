{
  "compilerOptions": {
    "target": "ES2022",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"],
      "tests/*": ["./test/*"]
    },
    "types": ["node"],
    "lib": ["ES2022"],
    "allowJs": true,
    "incremental": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "nodenext",
    "moduleResolution": "nodenext"
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["dist", "node_modules"]
}
