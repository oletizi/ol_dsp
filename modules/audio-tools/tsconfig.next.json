{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*", "./src/ts/*"]
    }

  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "./src-deprecated/app/**/*.ts",
    "./src-deprecated/app/**/*.tsx",
    "./src-deprecated/components/**/*.ts",
    "./src-deprecated/components/**/*.tsx",
    "./src-deprecated/**/*.ts",
    "./src-deprecated/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
